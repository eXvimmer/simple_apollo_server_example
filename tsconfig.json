{
  "compilerOptions": {
    "target": "ES5",                                  
    "lib": [
      "DOM",
      "ES6"
    ],
    "module": "commonjs",                                
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
